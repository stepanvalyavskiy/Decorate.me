<idea-plugin>
    <id>clueqva.Decorate.me</id>
    <name>Elegant IDE</name>
    <vendor email="stepanvalyavskiy@gmail.com" url="https://www.linkedin.com/in/stepan-valiavskii"/>

    <description><![CDATA[
    Wraps constructors in decorating constructors using completions.<br/><br/>
    Are your classes obese?<br/>
    Stop feeding them code!<br/>
    Better feed them to Decoratman.<br/><br/>

    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <completion.contributor language="JAVA"
                                implementationClass="ede.decorate.me.DecoratorConstructorsCompletionContributor"/>
    </extensions>

    <actions>
        <!-- Not Yet -->
    </actions>
</idea-plugin>